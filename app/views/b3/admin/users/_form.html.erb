<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="card">
      <h4 class="card-header">
        <%- if @user.new_record? -%>
          <i class="<%= User::NEW_ICON -%>"></i> Creat Account
        <%- else -%>
          <i class="<%= User::ICON -%>"></i> Edit Account
        <%- end -%>
      </h4>
      <div class="card-block">
        <%= form_for [:admin, @user], html: {class: 'form-horizontal', role: 'form' } do |f| %>
          <% if @user.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <strong><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>
              <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group row">
            <label for="user_first_name" class="col-sm-3 form-control-label form-control-label-right">First Name</label>
            <div class="col-sm-6">
              <%= f.text_field :first_name, :class => "form-control" -%>
            </div>
          </div>
          <div class="form-group row">
            <label for="user_last_name" class="col-sm-3 form-control-label form-control-label-right">Last Name</label>
            <div class="col-sm-6">
              <%= f.text_field :last_name, :class => "form-control" -%>
            </div>
          </div>
          <div class="form-group row">
            <label for="user_login" class="col-sm-3 form-control-label form-control-label-right">Email Address</label>
            <div class="col-sm-9">
              <%= f.text_field :login, :class => "form-control" -%>
            </div>
          </div>
          <div class="form-group row">
            <label for="user_password" class="col-sm-3 form-control-label form-control-label-right">Password</label>
            <div class="col-sm-7">
              <%= f.password_field :password, :class => "form-control" -%>
            </div>
          </div>
          <div class="form-group row">
            <label for="user_password_confirmation" class="col-sm-3 form-control-label form-control-label-right">Confirm</label>
            <div class="col-sm-7">
              <%= f.password_field :password_confirmation, :class => "form-control" -%>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-8 col-sm-offset-3">
              <%- if @user.new_record? -%>
                <%= f.submit 'Create Account', class: 'btn btn-primary' %>
                <%= link_to 'Cancel', root_path, :class => "btn btn-warning pull-xs-right" %>
              <%- else -%>
                <%= f.submit 'Update Account', class: 'btn btn-primary' %>
                <%= link_to 'Cancel', admin_settings_path, :title => "Cancel", :class => "btn btn-warning btn-sm pull-xs-right", :id => "cancel-button", :remote => true %>
              <%- end -%>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
