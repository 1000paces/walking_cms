<%= link_to "<i class='fa fa-fw fa-arrow-left'></i>".html_safe, admin_settings_path, :title => "Close", :class => "wcms-sidebar-link wcms-close-drawer-link left", :remote => true -%>
<h4 class="lead text-xs-center wcms-white-text">
  <i class="<%= Domain::ICON -%>"></i> Domain
</h4>
<%= form_for [:admin, @domain], :html => {class: 'wcms-sidebar-form', role: 'form'}, :remote => true do |f| %>
  <fieldset class="form-group">
    <label for="domain_name" class="small wcms-white-text">Domain Name</label>
    <%= f.text_field :name, :class => "form-control form-control-xs" -%>
    <small class="wcms-form-help text-help" id="name_help">The exact URL for your site (include the subdomain).</small>
  </fieldset>  
  <fieldset class="form-group">
    <label for="domain_label" class="small wcms-white-text">Domain Title</label>
    <%= f.text_field :label, :class => "form-control form-control-xs" -%>
    <small class="wcms-form-help text-help" id="title_help">The text that will appear in the browser tab or header with the page's label.</small>
  </fieldset>
  <fieldset class="form-group wcms-action-group">
		<%= f.submit 'Save', class: 'btn btn-secondary-outline btn-sm' %>
		<%= link_to 'Cancel', admin_settings_path, :title => "Cancel", :class => "btn btn-secondary-outline btn-sm pull-xs-right", :id => "cancel-button", :remote => true %>
  </fieldset>
<% end %>