<!DOCTYPE html>
<html lang="en">
	<head>
		<title><%= cms_name -%></title>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true -%>
		<%= cdn_js_bootstrap -%>

		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true -%>
		<%= cdn_css_bootstrap -%>
		<%= cdn_css_font_awesome -%>

		<%- if @user && @user.font -%>
			<%= @user.font.link(@user.font_weight).html_safe -%>
			<style>
				.full-height-container .wcms-cell {
					font-family: '<%= @user.font.family -%>', <%= @user.font.serif? ? 'serif' : 'sans serif' -%>  !important;
				}
			</style>
		<%- end -%>

	  <%= csrf_meta_tags -%>

	</head>
	<body>
		<%- unless @page.nil? -%>

		<%- end -%>
		<%= render :partial => "pages/toolbar" -%>
		<div id="wcms-wrapper">
			<%= yield %>
		</div>
		<%= render :partial => 'pages/footer' -%>

	</body>
</html>