if($("#drawer-help").is(':visible')){
	$("#drawer-help").hide("slide", { direction: "right" }, 500);
	$("#full-height").animate({'padding-right' : 0}, 500, function() {
		$("#drawer-forms").empty();
	});	
	$("#toggle-help").removeClass("active");
	$("#page-display").show();
} else {
	$("#help-index-div").html("<%= j render(:partial => 'help/index') -%>");
	$(".right-column").hide(); 
	$("#full-height").animate({'padding-right' : '20%'}, 150, function() {
		$("#toggle-help").addClass("active");
	});
	$("#drawer-help").show("slide", { direction: "right" }, 150);
}
