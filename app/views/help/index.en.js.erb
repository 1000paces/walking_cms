$(".wcms-master-toolbar-link").removeClass("active");
if($("#drawer-help").is(':visible')){
	$("#drawer-help").hide("slide", { direction: "right" }, 500);
	$("#drawer-forms").empty();
	$("#wcms-wrapper").removeClass("toggled");
} else {
	$("#help-index-div").html("<%= j render(:partial => 'help/index') -%>");
	$(".wcms-right-column").hide(); 
	$("#wcms-wrapper").addClass("toggled");
	$("#wcms-toggle-help").addClass("active");
	$("#drawer-help").fadeIn(); /*show("slide", { direction: "right" }, 150);*/
}