<nav class="navbar navbar-default">
	<div class="container">
		<div class="navbar-collapse collapse" id="navbar">
			<ul class="nav navbar-nav">
				<%- @user.top_nav_pages.each do |p| -%>
					<%- if p.children.count > 0 -%>
						<li id="wcms-page-<%= p.id %>" class="dropdown wcms-menu-link">
							<%= link_to p.label, page_path(p), :class => "dropdown-toggle", :data => {:toggle => "dropdown"}, :role => "button", "aria-expanded" => "false" -%>
							<ul class="dropdown-menu" role="menu">
								<%- p.children.each do |c| -%>
									<li id="wcms-page-<%= c.id %>" class="wcms-menu-link <%= 'active' if c.id == @page.id -%>"><%= link_to c.label, page_path(c), :remote => true -%></li>
								<%- end -%>
							</ul>
						</li>
					<%- else -%>
						<li class="wcms-menu-link <%= 'active' if p.id == @page.id -%>" id="wcms-page-<%= p.id %>">
							<%= link_to p.label, page_path(p), :remote => true  -%>
						</li>
					<%- end -%>
				<%- end -%>
			</ul>
		</div>
	</div>
</nav>