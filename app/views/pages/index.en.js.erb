if($("#drawer-pages").is(':visible')){
	$("#full-height").animate({'padding-right' : 0}, "slow", function() {
		$("#drawer-pages").hide();
		$("#drawer-forms").empty();
	});	
	$("#toggle-pages").removeClass("active");
	$("#page-display").show();
} else {
	$("#pages-index-div").html("<%= j render(:partial => 'pages/index') -%>");
	$(".right-column").hide(); 
	$("#drawer-pages").show();
	$("#full-height").animate({'padding-right' : '20%'}, "slow", function() {
		$("#toggle-pages").addClass("active");
	});
	
}
