if($("#drawer-pages").is(':visible')){
	$("#drawer-pages").hide("slide", { direction: "right" }, 500);
	$("#full-height").animate({'padding-right' : 0}, 500, function() {
		$("#drawer-forms").empty();
	});	
	$("#toggle-pages").removeClass("active");
	$("#page-display").show();
} else {
	$("#pages-index-div").html("<%= j render(:partial => 'pages/index') -%>");
	$(".right-column").hide(); 
	$("#full-height").animate({'padding-right' : '20%'}, 150, function() {
		$("#toggle-pages").addClass("active");
	});
	$("#drawer-pages").show("slide", { direction: "right" }, 150);
}
