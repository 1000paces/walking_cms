$(".wcms-master-toolbar-link").removeClass("active");
if($("#wcms-drawer-pages").is(':visible')){
	$("#wcms-drawer-pages").hide("slide", { direction: "right" }, 500);
	$("#drawer-forms").empty();
	$("#wcms-wrapper").removeClass("toggled");
} else {
	$(".wcms-right-column").hide(); 
	$("#pages-index-div").html("<%= j render(:partial => 'pages/index') -%>");
	$("#wcms-toggle-pages").addClass("active");
	$("#wcms-drawer-pages").fadeIn(); /*.show("slide", { direction: "right" }, 150);*/
	/*$("#wcms-toggle-settings").addClass("active");*/
	$("#wcms-wrapper").addClass("toggled");
}