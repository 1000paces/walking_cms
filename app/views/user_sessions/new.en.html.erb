<div class="container container-table">
	<div class="row vertical-center-row">
	  <div class="col-sm-12">
	  	<div class="p-a-3 blueprint-background card">
			  <%#= image_tag("blueprint_full.jpg", :class => "card-img-top") -%>
			  	
			    <h4 class="wcms-white-text"><%= cms_logo -%></h4>

					<%= form_for [:admin, @user], url: user_session_path, method: :post, html: { class: 'form-horizontal', role: 'form' } do |f| %>  
					  <fieldset class='form-group'>
			  	    <label class="sr-only" for="user_login">Login</label>
					    <%= f.text_field :login, class: 'form-control', placeholder: 'Login' %>
					  </fieldset>
					  <fieldset class='form-group'>
					  	<label class="sr-only" for="user_password">Password</label>
					    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
					  </fieldset>
					  <fieldset class='form-group text-xs-right'>
						  <%= f.submit 'Login', class: 'btn btn-secondary' %>
						 </fieldset>
					<% end %>
			</div>
		</div>
	</div>
</div>