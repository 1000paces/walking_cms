$("#wcms-row-<%= @row.id %>").empty();
<%- @row.cells.each_with_index do |cell, cell_index| -%>
	$("#wcms-row-<%= @row.id %>").append("<%= j render(:partial => 'pages/cell', :locals => {:row => @row, :cell => cell, :index => cell_index}) -%>");
<%- end -%>
<%- unless @cell.nil? -%>
	$("#wcms-work-cell-<%= @row.id %>-<%= @cell.id %>").effect("highlight");
<%- end -%>