$(".wcms-cell").removeClass("wcms-cell-active");
$("#wcms-work-cell-<%= @row.id %>-<%= @cell.id %>").addClass("wcms-cell-active");
$("#wcms-adjacent-cell").val(<%= @cell.id -%>);
$(".wcms-work-cell:not(#wcms-work-cell-<%= @row.id %>-<%= @cell.id %>)").removeClass("flipped");

if(!$("#wcms-cell-toolbar-vertical-<%= @row.id %>-<%= @cell.id %>").is(':visible')) {
	$("#wcms-content-wrapper").removeClass('toolbar-visible').delay(250).queue(function(next) {
		$(".wcms-cell-toolbar-vertical").hide();
		$("#wcms-master-toolbar").hide();
		$("#wcms-cell-toolbar-vertical-<%= @row.id %>-<%= @cell.id %>").show();
		$(this).addClass("toolbar-visible");
		next();
	})
