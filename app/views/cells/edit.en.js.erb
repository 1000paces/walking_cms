if($("#wcms-work-cell-<%= @cell.id %> .wcms-back").is(":visible")) {
	$("#wcms-work-cell-<%= @cell.id %>").toggleClass('flipped');
} 
$(".wcms-cell-toolbar-link").removeClass('active');
$("#wcms-cell-form-<%= @cell.id %>-x").html('<%= j render(:partial => "cells/form_#{@body_type}") -%>');
<%- if @body_type == 'text' -%>
	CKEDITOR.inline( "wcms-editor-<%= @cell.id %>", {
			startupFocus: true,
			skin: 'flat',
			toolbar: 'main'
		});
	$("#wcms-work-cell-<%= @cell.id %>").toggleClass('flipped');
<%- else -%>
	$("#wcms-work-cell-<%= @cell.id %>").toggleClass('flipped');
<%- end -%>

$(".wcms-cell-<%= @body_type %>").addClass('active');

