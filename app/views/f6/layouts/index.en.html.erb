<!DOCTYPE html>
<html lang="en">
	<head>
		<title id="wcms-tab-title">
			<%- if @owner.nil? || @owner.domain.nil? || @owner.domain.label.blank? -%>
				<%= cms_name -%>
			<%- else -%>
				<%= @owner.domain.label -%>
			<%- end -%>
			<%- unless @page.nil? -%>
				: <%= @page.title -%>
			<%- end -%>
		</title>
		<%= favicon_link_tag "/favicon.ico" %>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true -%>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true -%>
		<%= wcms_css(@owner.setting.framework) -%>
		<%= cdn_js_framework(@owner.setting.framework) -%>
		<%= cdn_css_framework(@owner.setting.framework) -%>

		<%= cdn_css_font_awesome -%>

		<style>
			.wcms-back .wcms-form-cell {
				font-family: "Helvetica Neue", Helvetica, Arial, sans-serif !important;
			}
		</style>

	  <%= csrf_meta_tags -%>
	</head>
	<%- if @owner.new_record? -%>
		<body class="wcms-navbar-fixed-top">
	<%- elsif @owner && @page.nil? -%>
		<body class="wcms-flex <%= @owner.setting.background_color -%> <%= @owner.setting.nav_class(true) -%>">
	<%- else -%>
		<body class="wcms-flex <%= @page.setting.background_class -%> <%= @page.setting.nav_class(true) -%> <%= @page.setting.overlap_style -%>">
	<%- end -%>
		<%- unless @page.nil? -%><%- end -%>
		<%= yield %>
		<div id="wcms-custom-font" style="display: none;">
			<%= render(:partial => "admin/pages/font") -%>
		</div>

    <script>
      $(document).foundation();
    </script>		
	</body>
</html>