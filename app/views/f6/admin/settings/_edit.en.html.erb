<%= link_to "<i class='fa fa-fw fa-arrow-left'></i>".html_safe, admin_settings_path, :title => "Close", :class => "wcms-sidebar-link wcms-close-drawer-link left", :remote => true -%>
<h4 class="lead text-center wcms-white-text">
  <i class="<%= Setting::DEFAULTS_ICON -%>"></i> Design
</h4>
<%= form_for [:admin, @setting], :html => {:class => "wcms-sidebar-form", role: 'form'}, :remote => true do |f| -%>
	<div class="small button-group">
		<%= f.radio_button :fluid, true -%><label class="wcms-fluid button secondary" for="page_setting_attributes_fluid_true">Fluid Layout</label>
		<%= f.radio_button :fluid, false -%><label class="wcms-fluid button secondary" for="page_setting_attributes_fluid_false">Static Layout</label>
	</div>
	<fieldset class="form-group">
		<label class="small form-control-label wcms-form-label wcms-white-text" for="setting_font_id">Font</label>
		<%= f.select(:font_id, Font.alpha_collection, {}, {:class => "form-control form-control-sm"}) %>
	</fieldset>	
	<div class="small button-group">
		<%= f.radio_button :font_weight, 100 -%><label class="wcms-font wcms-thin button secondary" for="page_setting_attributes_font_weight_100">Thin Font</label>
		<%= f.radio_button :font_weight, 400 -%><label class="wcms-font wcms-normal button secondary" for="page_setting_attributes_font_weight_400">Normal Font</label>
		<%= f.radio_button :font_weight, 700 -%><label class="wcms-font wcms-heavy button secondary" for="page_setting_attributes_font_weight_700">Heavy Font</label>
	</div> 
	<fieldset class="form-group">
		<label class="small wcms-white-text" for="setting_nav_location">Navigation Location</label>
		<%= f.select(:nav_location, Setting::NAV_LOCATION, {}, {:class => "form-control form-control-sm"}) %>
	</fieldset>
  <fieldset class="form-group">
    <label for="setting_border" class="show-for-sr">Overlap Header & Navigation</label>
    <label class="wcms-white-text small checkbox-inline">
      <%= f.check_box(:overlap, {}, 1, 0) %> Overlap Header & Navigation
    </label>
  </fieldset>		
  <fieldset class="form-group">
    <label for="page_label" class="small wcms-white-text" for="setting_nav_color">Navigation Color</label>
    <%= f.text_field :nav_color, :class => "form-control form-control-xs", :readonly => true -%>
    <script>
      $("#setting_nav_color").minicolors({opacity: true, format: 'rgb', position: 'top right'});
    </script>
  </fieldset>	
	<div class="checkbox">
		<label class="wcms-white-text checkbox-inline">
			<%= check_box_tag :sync, 1 -%> Synchronize all pages to these settings
		</label>
	</div>
	<div class="form-group wcms-action-group">
		<%= f.hidden_field :framework -%>
		<%= f.submit 'Save Changes', class: 'button secondary' %>
    <%= link_to "Cancel", admin_settings_path, :title => "Cancel", :id => "cancel-button", :class => "button secondary small pull-right", :remote => true -%>
	</div>
<%- end -%>
