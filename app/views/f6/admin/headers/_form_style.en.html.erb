<div class="card callout">
  <h6 class="callout-header"><i class="fa fa-fw fa-adjust"></i> Header Style</h6>
  <div class="callout-block">
    <%= form_for([:admin, @page], html: { multipart: true, class: "wcms-card-form", role: 'form' }, :remote => true) do |f| %>
      <div class="row">
        <div class="medium-12 columns">
          <label for="page_headline" class="show-for-sr">Subheading Text</label>
          <%= f.text_field :headline, :class => "form-control form-control-sm", :placeholder => "Subheading Text" %>
        </div>
      </div> 
      <%= f.fields_for :setting, @page.setting do |b| -%>    
  	    <div class="row">
          <div class="medium-12 columns">
    	      <label for="page_text_color" class="show-for-sr">Text Color</label>
    	      <%= b.text_field :text_color, :class => "form-control form-control-xs", :readonly => true -%>
    	      <script>
    	        $("#page_setting_attributes_text_color").minicolors({opacity: true, format: 'rgb', position: 'top right'});
    	      </script>
          </div>
  	    </div>
        <div class="row">
          <div class="medium-12 columns">
            <label for="setting_border" class="show-for-sr">Header Background?</label>
            <label class="small checkbox-inline">
              <%= b.check_box(:title_background, {}, 1, 0) %> Header Text Backgound
            </label>
          </div>
        </div>
        <div class="row">
          <div class="medium-12 columns">
            <label for="page_text_color" class="show-for-sr">Text Background Color</label>
            <%= b.text_field :title_background_color, :class => "form-control form-control-xs", :readonly => true -%>
            <script>
              $("#page_setting_attributes_title_background_color").minicolors({opacity: true, format: 'rgb', position: 'top right'});
            </script>
          </div>
        </div>
      <%- end -%>  
      <div class="row wcms-card-action-group">
        <div class="medium-12 columns">
        <%= f.submit "Save", class: "button small" %>
        <%= link_to "Cancel", "#", class: "button warning small wcms-cell-cancel-btn", data: {page: @page.id} -%>
        </div>
      </div>
    <% end %>
  </div>
</div>