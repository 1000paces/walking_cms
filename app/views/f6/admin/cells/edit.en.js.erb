var $modal = $("#wcms-cell-modal");
$modal.html('<%= j render(:partial => "admin/cells/form_#{@body_type}") -%>')
<%- if @body_type == 'text' -%>
    CKEDITOR.disableAutoInline = true;
    CKEDITOR.plugins.addExternal( 'sharedspace', '/assets/ckeditor/plugins/sharedspace/', 'plugin.js' );

		CKEDITOR.replace( "wcms-editor-<%= @cell.id %>", {
			skin: 'flat,/assets/ckeditor/skins/flat/',
			removePlugins: 'floatingspace,resize',
			sharedSpaces: {
				top: 'wcms-editor-top-toolbar-<%= @cell.id %>',
				bottom: 'wcms-editor-bottom-toolbar-<%= @cell.id %>'
			}			
		});
<%- end -%>

$modal.foundation('open');