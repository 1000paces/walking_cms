$("#wcms-form-box").html("<%= j render(:partial => 'form') -%>");

$("#wcms-page-display").fadeOut(function(){
	$("#wcms-page-display").html("<%= j render(:partial => 'admin/pages/display') -%>").fadeIn();
	$(document).foundation();
});


$(".wcms-right-column").hide("slide", { direction: "left" }, 500, function() {
	$("#wcms-form-box").show("slide", { direction: "right" }, 500, function() {
		$("#wcms-drawer-pages").hide();
	});
});



$("body").removeClass("<%= Setting::BODY_CLASSES -%>").addClass("<%= @page.setting.nav_class(true) -%> <%= @page.setting.background_class -%> <%= @page.setting.overlap_style -%>");