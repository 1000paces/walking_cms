<div class="wcms-header" id="wcms-header" data-page="<%= page.id -%>">
	<div class="wcms-flip" id="wcms-flip-header">
		<div class="wcms-card" id="wcms-flip-card-header">
			<div class="wcms-face wcms-front">
				<div class="card">
					<%- unless page.setting.image.blank? -%>
						<%- if page.setting.is_cropped? -%>	
							<%= cl_image_tag page.setting.image_url(:cropped), :class => "img-responsive center-block img-#{page.setting.shape}", :id => "wcms-header-img" -%>
						<%- else -%>
							<%= cl_image_tag page.setting.image_url, :class => "img-responsive center-block img-#{page.setting.shape}", :id => "wcms-header-img" -%>
						<%- end -%>
						<div class="card-img-overlay"id="wcms-img-overlay" style="<%= page.setting.text_color_style -%>">
					<%- else -%>
						<div class="card-block">
					<%- end -%>
						<div style="<%= page.setting.title_background_style -%>">
							<h1 class="text-center display-4" id="wcms-page-label"><%= page.label -%></h1>
							<%- unless page.headline.blank? -%>
								<p class="lead text-center"><%= page.headline -%></p>
							<%- end -%>
						</div>
					</div>
				</div>
				<%= render :partial => "admin/headers/tools", :locals => {page: page} -%>
			</div>
			<div class="wcms-face wcms-back">
				<div class="wcms-form-cell" id="wcms-header-form-<%= page.id %>"></div>
			</div>
		</div>
	</div>
	<%= render :partial => "admin/pages/nav_horizontal" if page.setting.nav_location < 5 && page.setting.overlap? -%>	
</div>