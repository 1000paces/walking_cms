<%= link_to "<i class='fa fa-fw fa-arrow-left'></i>".html_safe, settings_path, :title => "Close", :class => "wcms-sidebar-link wcms-close-drawer-link left", :remote => true -%>
<h4 class="lead text-xs-center wcms-white-text">
  <i class="<%= Domain::ICON -%>"></i> Domain
</h4>
<%= form_for @domain, :html => {class: 'wcms-sidebar-form', role: 'form'}, :remote => true do |f| %>
  <fieldset class="form-group">
    <label for="domain_name" class="small wcms-white-text">Domain Name</label>
    <%= f.text_field :name, :class => "form-control form-control-xs" -%>
  </fieldset>  
  <fieldset class="form-group">
    <label for="domain_label" class="small wcms-white-text">Description</label>
    <%= f.text_field :label, :class => "form-control form-control-xs" -%>
  </fieldset>
  <fieldset class="form-group">
		<%= f.submit 'Save', class: 'btn btn-secondary btn-sm' %>
		<%= link_to 'Cancel', settings_path, :title => "Cancel", :class => "btn btn-warning btn-sm pull-xs-right", :id => "cancel-button", :remote => true %>
  </fieldset>
<% end %>