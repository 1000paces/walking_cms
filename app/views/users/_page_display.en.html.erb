		$(".wcms-tools").fadeOut();
		$(".wcms-work-cell").removeClass('wcms-work-cell-active');
		$(".wcms-cell").removeClass('wcms-work-cell-active');

		if($("#wcms-tool-cell-top-" + cellNumber).is(":visible")){
