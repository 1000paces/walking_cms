<%= form_for(@user, html: {class: 'wcms-sidebar-form', role: 'form' }, :remote => true) do |f| %>
  <div class="form-group">
    <label for="user_first_name" class="small wcms-white-text">First Name</label>
    <%= f.text_field :first_name, :class => "form-control form-control-xs" -%>
  </div>  
  <div class="form-group">
    <label for="user_last_name" class="small wcms-white-text">Last Name</label>
    <%= f.text_field :last_name, :class => "form-control form-control-xs" -%>
  </div>
  <div class="form-group">
    <label for="user_login" class="small wcms-white-text">Email Address</label>
     <%= f.text_field :login, :class => "form-control form-control-xs" -%>
  </div>
  <div class="form-group">
    <label for="user_password" class="small wcms-white-text">Password</label>
    <%= f.password_field :password, :class => "form-control form-control-xs" -%>
  </div>
  <div class="form-group">
    <label for="user_password_confirmation" class="small wcms-white-text">Confirm Password</label>
    <%= f.password_field :password_confirmation, :class => "form-control form-control-xs" -%>
  </div>
  <div class="form-group">
		<%= f.submit 'Save', class: 'btn btn-secondary btn-sm' %>
		<%= link_to 'Cancel', edit_user_path(@user), :class => "btn btn-warning btn-sm pull-xs-right", :id => "cancel-button", :remote => true %>
  </div>
<% end %>