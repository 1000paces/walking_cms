<%= form_for(@user, html: {class: 'form-horizontal', role: 'form' }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <strong><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</strong>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="user_first_name" class="col-sm-3">First Name</label>
    <div class="col-sm-6">
      <%= f.text_field :first_name, :class => "form-control" -%>
    </div>
  </div>
  <div class="form-group">
    <label for="user_last_name" class="col-sm-3">Last Name</label>
    <div class="col-sm-6">
      <%= f.text_field :last_name, :class => "form-control" -%>
    </div>
  </div>
  <div class="form-group">
    <label for="user_login" class="col-sm-3">Email Address</label>
    <div class="col-sm-9">
      <%= f.text_field :login, :class => "form-control" -%>
    </div>
  </div>
  <div class="form-group">
    <label for="user_password" class="col-sm-3">Password</label>
    <div class="col-sm-7">
      <%= f.password_field :password, :class => "form-control" -%>
    </div>
  </div>
  <div class="form-group">
    <label for="user_password_confirmation" class="col-sm-3">Confirm</label>
    <div class="col-sm-7">
      <%= f.password_field :password_confirmation, :class => "form-control" -%>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-3">
      <%= f.submit 'Create Account', class: 'btn btn-primary' %>
      <%= link_to 'Cancel', welcome_index_path, :class => "btn btn-danger pull-right" %>
    </div>
  </div>
<% end %>
