<%= link_to "<i class='fa fa-fw fa-arrow-left'></i>".html_safe, admin_settings_path, :title => "Close", :class => "wcms-sidebar-link wcms-close-drawer-link left", :remote => true -%>
<h4 class="lead text-xs-center wcms-white-text">
  <i class="<%= Setting::DEFAULTS_ICON -%>"></i> Design
</h4>
<div class="">
	<%= form_for [:admin, @setting], :html => {:class => "wcms-sidebar-form", role: 'form'}, :remote => true do |f| -%>
		<fieldset class="form-group">
			<label class="small wcms-white-text" for="setting_fluid">Layout</label>
			<div class="radio">
				<label class="wcms-white-text radio-inline">
					<small><%= f.radio_button :fluid, true -%> Fluid</small>
				</label>
				<label class="wcms-white-text radio-inline">
					<small><%= f.radio_button :fluid, false -%> Static</small>
				</label>
			</div>
		</fieldset>	
		<fieldset class="form-group">
			<label class="small wcms-white-text" for="setting_font_id">Font</label>
			<%= f.select(:font_id, Font.alpha_collection, {}, {:class => "form-control form-control-sm"}) %>
		</fieldset>
		<fieldset class="form-group">
			<label class="small wcms-white-text" for="setting_font_id">Font Weight</label>
			<div class="radio">
				<label class="wcms-white-text radio-inline">
					<small><%= f.radio_button :font_weight, 100 -%> Thin</small>
				</label>
				<label class="wcms-white-text radio-inline">
					<small><%= f.radio_button :font_weight, 400 -%> Normal</small>
				</label>
				<label class="wcms-white-text radio-inline">
					<small><%= f.radio_button :font_weight, 700 -%> Heavy</small>
				</label>
			</div>
		</fieldset>
		<fieldset class="form-group">
			<label class="small wcms-white-text" for="setting_nav_location">Navigation Location</label>
			<%= f.select(:nav_location, Setting::NAV_LOCATION, {}, {:class => "form-control form-control-sm"}) %>
		</fieldset>
    <fieldset class="form-group">
      <label for="page_label" class="small wcms-white-text" for="setting_nav_color">Navigation Color</label>
      <%= f.text_field :nav_color, :class => "form-control form-control-xs", :readonly => true -%>
      <script>
        $("#setting_nav_color").minicolors({opacity: true, format: 'rgb', position: 'top right'});
      </script>
    </fieldset>	
		<div class="checkbox">
			<label class="wcms-white-text checkbox-inline">
				<small><%= check_box_tag :sync, 1 -%> Synchronize all pages to these settings</small>
			</label>
		</div>
		<div class="form-group wcms-action-group">
			<%= f.submit 'Save', class: 'btn btn-primary btn-sm' %>
	    <%= link_to "Cancel", admin_settings_path, :title => "Cancel", :id => "cancel-button", :class => "btn btn-warning btn-sm pull-xs-right", :remote => true -%>
		</div>
	<%- end -%>
</div>